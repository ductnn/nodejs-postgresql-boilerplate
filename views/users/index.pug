extends ../layouts/common.pug

block content
    h1 
        span.mr-3 Hello #{name}
        a.btn.btn-primary(href="/users/create") Create
    .d-flex.align-items-center
        form.ml-auto(action="/users/search/", method="GET", class="d-flex")
            input(type="search", name="q", class="form-control mb-2 mr-sm-2", id="search-input", placeholder="Search..." )
            button(class="btn btn-primary mb-2") Search
    table.table.table-striped
        tr.text-center
            th Avatar
            th id
            th Name
            th Email
            th Phone
            th View 
            th Actions

        each user in users
            tr.text-center
                td
                    img(src= '/static/' + user.image, width=50)
                td= user.id
                td= user.name
                td= user.email
                td= user.phone
                td
                    a(href="/users/" + user.id) Profile
                td 
                    a.btn.btn-success.btn-xs.mr-3(href="/users/edit/" + user.id)
                        i.fa.fa-edit
                    a.btn.btn-danger.btn-xs(href="/users/delete/" + user.id)
                        i.fa.fa-trash

