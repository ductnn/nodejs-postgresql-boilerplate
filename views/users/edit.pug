extends ../layouts/common.pug

block content
    h1 Edit users
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/edit/" + user.id, method="POST")
        input.form-control(name="id", type="hidden", value= user.id )
        .form-group
            label(for="name") Name: 
            input#name.form-control(name="name", type="text", value= user.name)
        .form-group
            lable(for="email") Email: 
            input#email.form-control(name="email", type="text", value= user.email)
        .form-group
            lable(for="phone") Phone: 
            input#phone.form-control(name="phone", type="number", value= user.phone)
        .form-group
            lable(for="pass") Password: 
            input#pass.form-control(name="password", type="password", value= user.pass)
        //- .form-group
        //-     label(for="avatar") Avatar:
        //-     input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-success Update
